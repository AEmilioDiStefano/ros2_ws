        <pose>4.3 0 1 0 -0.2618 0</pose>
        <collision name="col">
          <geometry><box><size>10.0 2 0.25</size></box></geometry>
        </collision>
        <visual name="vis"><geometry><box><size>10.0 2 0.25</size></box></geometry></visual>
