    <!-- This is the coast waves model stored in models/coast_waves_2 -->
    <include>
      <uri>model://coast_waves_2/model.sdf</uri>
      <name>ocean_surface</name>
      <!-- 
        POSITION PARAMETERS: 
        x meters in X, 
        y meter in Y, 
        z meters up in Z,
        rotate by x radians around X (roll), 
        rotate y radians around Y (pitch),
        rotate z radians around Z (yaw). 
        -->
      <pose>0 0 -1 0 0 0</pose>
    </include>

